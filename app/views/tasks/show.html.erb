<div class="container mt-3">

  <h2><%= @task.title %></h2>
  <div class="card text-dark bg-light mb-3 mt-3">
    <p class="card-text m-3"><%= @task.details %></p>
  </div>

  <% if @task.completed == false %><p>This task is not completed yet</p><% end  %>
  <% if @task.completed %><p>This task is completed!</p><% end  %>

  <p><%= link_to("✐ Edit this task", edit_task_path) %></p>
  <p><%= link_to '✗ Delete this task', task_path, method: :delete %></p>
  <p><%= link_to("☞ Back to list", tasks_path) %></p>

</div>
